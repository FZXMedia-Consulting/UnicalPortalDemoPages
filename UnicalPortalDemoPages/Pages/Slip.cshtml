@page
@model UnicalPortalDemoPages.Pages.SlipModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admission Slip</title>
    <meta charset="utf-8" />
    <meta name="description" content="Good admin dashboard live demo. Check out all the features of the admin panel. A large number of settings, additional services and widgets." />
    <meta name="keywords" content="Good, bootstrap, bootstrap 5, admin themes, Asp.Net Core &amp; Django starter kits, admin themes, bootstrap admin, bootstrap dashboard, bootstrap dark mode" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="shortcut icon" href="../../assets/media/logos/favicon.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    @*<link href="~/css/slipcsst.css" rel="stylesheet" asp-append-version="true" />*@
    <style>
        body {
            display: flex;
            flex-direction: column;
        }

        html, body {
            height: 100%;
            margin: 0px;
            padding: 0px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            font-size: 13px !important;
            font-weight: 400;
            font-family: Inter, Helvetica, "sans-serif";
        }

        .app-blank {
            background-color: #fff
        }

        .flex-root {
            flex: 1;
        }

        .flex-column-fluid {
            flex: 1 0 auto;
        }

        .p-10 {
            padding: 2.5rem !important;
        }

        .flex-column {
            flex-direction: column !important;
        }

        .flex-row-fluid {
            flex: 1 auto;
            min-width: 0;
        }

        .flex-column-fluid {
            flex: 1 0 auto;
        }

        .py-20 {
            padding-top: 5rem !important;
            padding-bottom: 5rem !important;
        }

        .pt-20 {
            padding-top: 5rem !important;
        }

        .text-gray-800 {
            color: var(--kt-text-gray-800) !important;
        }

        .fw-bold {
            font-weight: 600 !important;
        }

        .fs-2qx {
            font-size: calc(1.35rem + 1.2vw) !important;
        }

        h5, .h5 {
            font-size: 1.15rem;
        }

        @@media (min-width: 1200px) {
            .fs-2qx {
                font-size: 2.25rem !important;
            }
        }

        .fw-semibold {
            font-weight: 500 !important;
        }

        .fs-3 {
            font-size: calc(1.26rem + 0.12vw) !important;
        }

        @@media (min-width: 1200px) {
            .fs-3 {
                font-size: 1.15rem !important;
            }
        }

        .mb-15 {
            margin-bottom: 3.75rem !important;
        }

        ul li {
            margin-bottom: .6rem
        }
    </style>
</head>

<body class="auth-bg app-blank">

    <div class="d-flex flex-column flex-root" id="kt_app_root">
        <div class="d-flex flex-column flex-column-fluid">
            <div class="row d-flex flex-row-fluid flex-column justify-content-center align-content-center flex-column-fluid  p-10 py-20">
                <div class="col-md-8">
                    <div class="card border-3" style="padding: 2rem">
                        <div class="card-header text-center bg-transparent border-0">
                            <a href="../../index.html" class="pt-20 mb-12">
                                <img alt="Logo" src="~/img/logo53.png" class="h-40px" />
                            </a>

                            <h1 class="fw-bold fs-2qx text-gray-800 mb-7">University of Calabar</h1>
                            <h2 class="fw-bold fs-1qx text-gray-800 mb-7">Admission Slip</h2>
                        </div>


                        <div class="card-body">
                            <div class="d-block">
                                <h5><strong class="mr-2 text-muted">Name:</strong> [Student's Name]</h5>
                                <h5><strong class="mr-2 text-muted">Reg No:</strong> [Student ID Number]</h5>
                                <h5><strong class="mr-2 text-muted">Program:</strong> [Program of Study]</h5>
                                <h5><strong class="mr-2 text-muted">Date:</strong> @DateTime.Now.ToString("dd, MMM yyyy")</h5>
                            </div>

                            <h5 class="mt-5">Dear [Student's Name],</h5>

                            <div class="fw-semibold fs-3 text-muted mb-15">
                                We are pleased to inform you that you have been admitted to [University Name] for the [Academic Year/ Semester].
                                Please present this admission slip upon entering the university premises.

                                <p class="mt-3">Please take note of the following important details:</p>

                                <ul>
                                    <li>Orientation: An orientation program will be conducted on [Orientation Date and Time]. Attendance is mandatory for all new students.</li>
                                    <li>Course Registration: Course registration will begin on [Course Registration Date]. Please consult with your academic advisor for assistance in selecting your courses.</li>
                                    <li>Payment of Fees: Please settle your tuition fees on or before [Due Date for Payment of Fees]. A separate billing statement will be provided to you.</li>
                                    <li>University ID: Please visit the university ID office to obtain your student ID card.</li>
                                </ul>

                                <p class="mt-3">We hope that you will have a successful academic career with us. Should you have any questions or concerns, please do not hesitate to contact us.</p>
                                <p class="mt-3">Sincerely,</p>
                            </div>

                            <div class="d-block">
                                <h5>[University Authority's Name]</h5>
                                <h5>[University Authority's Position]</h5>
                            </div>


                        </div>
                        <div class="card-footer">
                            <div class="fs-5">
                                <span class="fw-semibold text-gray-700">Did’t receive an email?</span>
                                <a href="../layouts/default/sign-up.html" class="link-primary fw-bold">Resend</a>
                            </div>
                        </div>

                    </div>
                </div>


            </div>

            <div class="d-flex flex-row-auto bgi-no-repeat bgi-position-x-center bgi-size-contain bgi-position-y-bottom min-h-150px min-h-lg-350px" style="background-image: url(../../assets/media/illustrations/sketchy-1/7.png)"></div>
        </div>
    </div>

</body>

</html>