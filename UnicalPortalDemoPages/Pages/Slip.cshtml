        }

        .flex-column-fluid {
            flex: 1 0 auto;
        }

        .p-10 {
            padding: 2.5rem !important;
        }

        .flex-column {
            flex-direction: column !important;
        }

        .flex-row-fluid {
            flex: 1 auto;
            min-width: 0;
        }

        .flex-column-fluid {
            flex: 1 0 auto;
        }

        .py-20 {
            padding-top: 5rem !important;
            padding-bottom: 5rem !important;
        }

        .pt-20 {
            padding-top: 5rem !important;
        }

